<div id="discussionentry">

    <!-- display the list of discussions for a given review -->
    <h2>Discussions</h2>
    <% if @discussions.size > 1 %>
        <% @discussions.each do |discuss| %>
            <% if not discuss.id.nil? %>
               <% discussionId = 'discussion-'+discuss.id.to_s %>
               <div id='<%=discussionId%>' class="well discussion">

                <!-- display all the comments that belong to each discussion -->
                <% @comments = discuss.comments %>
                <%= render 'comments/comments' %>

                <!-- display the new comment on a discussion icon -->
                <%= render'comments/newComment' %>
               </div>
            <% end %>
        <% end %>
    <% else %>
        <div class="well">

            <!-- if there are no discussions to this review, show this message. -->
            <b>No one has posted comments on this review</b>
        </div>
    <% end %>

</div>