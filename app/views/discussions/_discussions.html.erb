<div id="discussionentry">

    <h2>Discussions</h2>
    <% if @discussions.size > 1 %>
        <% @discussions.each do |discuss| %>
            <% if not discuss.id.nil? %>
               <% discussionId = 'discussion-'+discuss.id.to_s %>
               <div id='<%=discussionId%>' class="well discussion" data-toggle="collapse">
                <% @comments = discuss.comments %>
                <%= render 'comments/comments' %>
                <%= render'comments/newComment' %>
               </div>
            <% end %>
        <% end %>
    <% else %>
        <div class="well">
            <b>No one has posted comments on this review</b>
        </div>
    <% end %>

</div>