<script type="text/javascript">
	function read(){
		$.ajax({
			url: '/read',
        	type:'POST'
        }).error(function(data){
        	alert("Something has gone wrong!");
		});
	}
</script>
<li class = "active" ><a href = "#" onclick = "read()">Notifications <span class = "navbar-unread"><%= @num_unread %></span></a>
	<% if @num_unread > 0 %>
		<ul style = "color:white">
			<% @activities.each do |activity| %>
				<% if !activity.parameters[:read]%>
				  	<li><% if activity.trackable_type == "Comment" && activity.parameters[:title] && Activity.unread_by(activity.owner)%>
					    <%= link_to activity.owner.name + " added a new comment to " + activity.parameters[:title], review_path(activity.key)%></li>
					<% else %>
						<li>
							<% if activity.trackable_type == "Comment" %>
					    	 <%= link_to activity.owner.name + " added a new discussion to your review", review_path(activity.key) %>
							<%end %>
						</li>
				
				<%end %>
				<%end%>
			<% end %>
		</ul>
	<% else%>
		<ul style = "color:white; font-size:14px"><li>No unread notifications!</li></ul>
	<%end%>
</li>