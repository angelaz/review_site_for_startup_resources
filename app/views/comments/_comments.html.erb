<div class="comments">

  <% @comments.each do |comment| %>
    <div class="comment">
      <div class="comment_heading">
      	<% user = comment.user %>
      	<b><%= user.name %></b>
      	<span><%= comment.created_at %></span>
      </div>
      <p>
      <%= comment.body %>
    </div>
   <% end %>
</div>
