<div id="addReviewForm" style = "margin-left:100px; width = 600px">

<%= form_for [@reviewable, Review.new] do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" style = "width = 600px">
    <%= label_tag 'title', 'What did you think overall?' %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= label_tag 'rating', 'How would you rate from 1 to 5?' %><br />
    <%#= f.radio_button :rating, options_for_select%>
    <%#= f.radio_button :rating, {:class=>'star'})%>
    <input name="rating" type="radio" class="star" value="1">    
    <input name="rating" type="radio" class="star" value="2">
    <input name="rating" type="radio" class="star" value="3">
    <input name="rating" type="radio" class="star" value="4">
    <input name="rating" type="radio" class="star" value="5">
  </div>

  <div class="field">
    <%= label_tag 'body', 'Any specific comments?' %><br />
    <%= f.text_area :body, :rows => 4, :columns => 100%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

</div>
