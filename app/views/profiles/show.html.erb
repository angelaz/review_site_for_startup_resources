
<div class="container">

<div class="row">

  <div class="span5">
    <% if @profile.picture_url != nil %>
    	<%= filepicker_image_tag @profile.picture_url, :class => "profilepic" %>
    <% else %>
    	<img src="../assets/images/default-avatar.jpg" class = "profilepic">
    <% end %>
    <div style="margin-left: 55px;">
      <%= render 'form' %>
    </div>
  </div>

  <div class="span7" style="margin-top: 40px; margin-left: 20px;">

    <h1><%= current_user.name %></h1>
    <p>
      <h4>About:</h4>
      <%= best_in_place @profile, :about %>
    </p>
    <p>
      <h4>Number:</h4>
      <%= best_in_place @profile, :contactnum %>
    </p>

  </div>
</div>
</div>
