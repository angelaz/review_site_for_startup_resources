<style type="text/css">
      body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
      }

</style>


<div class="container">
    <div class="form-signin">
<h2 class="form-signin-heading">Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true, :class => "input-block-level" %></div>

  <div><%= f.label :password %>
  <%= f.password_field :password, :class => "input-block-level" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me, :class => "checkbox" %> Remember me </div>
  <% end -%>

  <div><%= f.submit "Sign in", :class => "btn btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>

</form>
</div>
