<div class="container">
  <div class="form-signin">
    <h2 class="form-signin-heading">Sign in</h2>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div>
      <%= f.text_field :email, :autofocus => true, :class => "input-controls-level", :placeholder => "Email" %>
    </div>

    <div>
      <%= f.password_field :password, :class => "input-controls-level", :placeholder => "Password" %>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div style="text-align: left; margin: auto; width: 215px;">
      <%= f.check_box :remember_me, :class => "checkbox" %> Remember me
    </div>
    <% end -%>

    <br>

    <table style="margin: auto;">
      <td>
        <th>
          <div><%= f.submit "Sign in", :class => "btn btn-primary",  :style=>"width: 90px; margin: 5px;" %></div>
        </th>
        <th>
          <b>OR</b>
        </th>
        <th><%= button_to "Sign up", new_registration_path(resource_name), :class => "btn", :style=>" width: 90px; margin: 5px;" %>
        </th>
      </table>


      <% end %>
      <div style="text-align: left; margin: auto; margin-top: 20px; width: 215px;">
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      </div>
    </div>
  </div>
