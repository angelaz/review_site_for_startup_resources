<div class="container">
  <div class="form-signin">
    <h2 class="form-signin-heading">Sign in</h2>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div>
      <%= f.text_field :email, :autofocus => true, :class => "input-controls-level", :placeholder => "Email" %>
    </div>

      <div>
        <%= f.password_field :password, :class => "input-controls-level", :placeholder => "Password" %></div>

        <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me, :class => "checkbox" %> Remember me </div>
        <% end -%>

        <div><%= f.submit "Sign in", :class => "btn btn-primary" %></div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
